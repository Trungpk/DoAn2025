

@model UserModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="card">
    <h2 class="text-center">Create Your Account</h2>
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3 text-center"></div>
    <form asp-action="Create" asp-controller="Account" method="post">
        <div class="form-group mb-4">
            <label asp-for="Username" class="form-label">Username</label>
            <input asp-for="Username" class="form-control" placeholder="Enter your username" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="Email" class="form-label">Email Address</label>
            <input asp-for="Email" class="form-control" placeholder="Enter your email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="Password" class="form-label">Password</label>
            <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Sign Up</button>

        <div class="text-center mt-4">
            <p class="text-muted mb-2">or sign up with</p>
            <div class="social-login">
                <button type="button" title="Google"><i class="fab fa-google"></i></button>
                <button type="button" title="Facebook"><i class="fab fa-facebook-f"></i></button>
                <button type="button" title="Apple"><i class="fab fa-apple"></i></button>
            </div>
        </div>

        <div class="text-center mt-4">
            <a asp-action="Login" asp-controller="Account" class="text-muted" style="text-decoration: none; transition: color 0.3s ease;">Already have an account? Sign in here</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}