@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="card">
    <h2 class="text-center">Welcome Back</h2>
    <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3"></div>
    <form asp-action="Login" asp-controller="Account" method="post">
        <div class="form-group mb-4">
            <label class="form-label" asp-for="Username">Username</label>
            <input asp-for="Username" class="form-control" placeholder="Enter your username" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label class="form-label" asp-for="Password">Password</label>
            <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="text-center mb-4">
            <a href="#" class="text-muted" style="text-decoration: none; transition: color 0.3s ease;">Forgot your password?</a>
        </div>

        <button type="submit" class="btn btn-primary">Sign In</button>

        <div class="text-center mt-4">
            <p class="text-muted mb-2">or sign in with</p>
            <div class="social-login">
                <button type="button" title="Google"><i class="fab fa-google"></i></button>
                <button type="button" title="Facebook"><i class="fab fa-facebook-f"></i></button>
                <button type="button" title="Apple"><i class="fab fa-apple"></i></button>
            </div>
        </div>

        <div class="text-center mt-4">
            <a asp-action="Create" asp-controller="Account" class="text-muted" style="text-decoration: none; transition: color 0.3s ease;">Need an account? Sign up here</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}