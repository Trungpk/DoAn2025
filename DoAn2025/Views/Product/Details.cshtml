@model DoAn2025.Models.ProductModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-3">
        @Html.Partial("_SidebarPartial")
    </div>
    <div class="col-sm-9 padding-right">
        <div class="product-details">
            <div class="col-sm-5">
                <div class="view-product">
                    <img src="~/media/products/@Model.Image" alt="100px" />
                </div>
                <div id="similar-product" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="item">
                            <a href=""><img src="images/product-details/similar1.jpg" alt=""></a>
                            <a href=""><img src="images/product-details/similar2.jpg" alt=""></a>
                            <a href=""><img src="images/product-details/similar3.jpg" alt=""></a>
                        </div>
                    </div>
                    <a class="left item-control" href="#similar-product" data-slide="prev">
                        <i class="fa fa-angle-left"></i>
                    </a>
                    <a class="right item-control" href="#similar-product" data-slide="next">
                        <i class="fa fa-angle-right"></i>
                    </a>
                </div>
            </div>
            <div class="col-sm-7">
                <div class="product-information">
                    <h2>@Model.Name</h2>
                    <span>
                        <span>US $@Model.Price</span>
                        <label>Quantity:</label>
                        <input type="number" min="1" value="1" id="quantity" style="width: 50px;" />
                        <a asp-action="Add" asp-controller="Cart" asp-route-Id="@Model.Id" class="btn btn-default add-to-cart">
                            <i class="fa fa-shopping-cart"></i> Add to cart
                        </a>
                    </span>
                    <p><b>Availability:</b> In Stock</p>
                    <p><b>Condition:</b> New</p>
                    <p><b>Brand:</b> @Model.Brand.Name</p>
                    <p><b>Category:</b> @Model.Category.Name</p> 
                    <p><b>Description:</b> @Model.Description</p>
                   
                </div>
            </div>
        </div>
    </div>
</div>


