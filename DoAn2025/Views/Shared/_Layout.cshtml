                        {
                            <li><a asp-controller="Account" asp-action="Logout"><i class="fa fa-lock"></i>Hi, @User.Identity.Name, Logout</a></li>
                            <li><a href="checkout.html"><i class="fa fa-crosshairs"></i> Checkout</a></li>
                            <li><a asp-controller="Category" asp-action="Index" asp-area="Admin"><i class="fa fa-lock"></i>Admin CMS</a></li>
                            <li><a href="#"><i class="fa fa-star"></i> Wishlist</a></li>
                        }
                        else
                        {
                            <li><a asp-controller="Account" asp-action="Login"><i class="fa fa-lock"></i> Login</a></li>
                        }
                    </ul>
                </nav>
                <form asp-controller="Product" asp-action="Search" method="post" class="search-form">
                    <input type="text" placeholder="Search" name="searchTerm" />
                    <button type="submit">Search</button>
                </form>
            </div>
        </div>
    </header>

    <section id="slider">
        <div class="container">
            <div id="slider-carousel" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#slider-carousel" data-slide-to="0" class="active"></li>
                    <li data-target="#slider-carousel" data-slide-to="1"></li>
                    <li data-target="#slider-carousel" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="item active">
                        <img src="https://images.vexels.com/media/users/3/194701/raw/aa72abca784117244de372b5e9926988-online-shopping-slider-template.jpg" alt="Slider 1" />
                    </div>
                    <div class="item">
                        <img src="https://zshop.vn/blogs/wp-content/uploads/2017/09/mon-do-cong-nghe.png" alt="Slider 2" />
                    </div>
                    <div class="item">
                        <img src="https://www.ngostore.net/wp-content/uploads/2018/11/slider-NGO-store-01.jpg" alt="Slider 3" />
                    </div>
                </div>
                <a href="#slider-carousel" class="left control-carousel" data-slide="prev"><i class="fa fa-angle-left"></i></a>
                <a href="#slider-carousel" class="right control-carousel" data-slide="next"><i class="fa fa-angle-right"></i></a>
            </div>
        </div>
    </section>

    <main>
        <div class="container">
            @Html.Partial("_NotificationPartial")
            @RenderBody()
        </div>
    </main>

    <footer>
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <h2>Services</h2>
                    <ul>
                        <li><a href="#">Online Support</a></li>
                        <li><a href="#">Contact</a></li>
                        <li><a href="#">Order Status</a></li>
                        <li><a href="#">Change Location</a></li>
                        <li><a href="#">FAQ</a></li>
                    </ul>
                </div>
                <div class="footer-section">
                    <h2>Information</h2>
                    <ul>
                        <li><a href="#">About Us</a></li>
                        <li><a href="#">Privacy Policy</a></li>
                        <li><a href="#">Terms of Service</a></li>
                        <li><a href="#">Careers</a></li>
                    </ul>
                </div>
                <div class="footer-section">
                    <h2>Contact</h2>
                    <p class="contact-info"><i class="fa fa-map-marker-alt"></i> Thanh Hải Thanh Hà Hải Dương</p>
                    <p class="contact-info"><i class="fa fa-phone"></i> 0867640635</p>
                    <p class="contact-info"><i class="fa fa-envelope"></i> support@cucu.com</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Chatbot -->
    <button id="chatbot-btn">
        <img src="https://tse4.mm.bing.net/th?id=OIP.4Qn-NtDHTll8E2hqDP9J7QHaHa&pid=Api&P=0&h=180" style="width: 50px; height: 50px;">
    </button>

    <div id="chatbot-container">
        <div id="chatbot-header">
            <span><img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSPAjOxwLNNBZhVTM1JiddLPCNBSVSfhgNITA&s" style="max-width: 40px; height: 40px;" /> CuCu</span>
            <select id="language-select">
                <option value="vi">Vietnamese</option>
                <option value="en">English</option>
            </select>
        </div>
        <div id="chatbot-messages"></div>
        <div id="chatbot-input-container">
            <input type="text" id="chatbot-input" placeholder="Enter message...">
            <button id="send-chatbot">Send</button>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
    <script>
        // Particle Background
        particlesJS("particles-js", {
            particles: {
                number: { value: 50, density: { enable: true, value_area: 800 } },
                color: { value: "#EA580C" },
                shape: { type: "circle" },
                opacity: { value: 0.3, random: true },
                size: { value: 3, random: true },
                line_linked: { enable: false },
                move: { enable: true, speed: 1, direction: "none", random: true }
            },
            interactivity: {
                detect_on: "canvas",
                events: { onhover: { enable: true, mode: "repulse" }, onclick: { enable: true, mode: "push" } },
                modes: { repulse: { distance: 100, duration: 0.4 }, push: { particles_nb: 4 } }
            }
        });

        // Header Scroll Effect
        window.addEventListener('scroll', function () {
            const header = document.querySelector('header');
            if (window.scrollY > 50) {
                header.classList.add('scrolled');
            } else {
                header.classList.remove('scrolled');
            }
        });

        // Footer Fade-In Effect
        window.addEventListener('scroll', function () {
            const footer = document.querySelector('footer');
            const footerPosition = footer.getBoundingClientRect().top;
            const windowHeight = window.innerHeight;
            if (footerPosition < windowHeight * 0.9) {
                footer.classList.add('visible');
            }
        });

        // Chatbot Toggle Effect
        const chatbotBtn = document.getElementById("chatbot-btn");
        const chatbotContainer = document.getElementById("chatbot-container");
        const chatMessages = document.getElementById("chatbot-messages");

        function processChatHistory(history) {
            let processedHistory = history.replace(/\n/g, "<br>");
            processedHistory = processedHistory.replace(/\[([^\]]+)\]\(([^)]+)\)/g, '<a href="$2" target="_blank">$1</a>');
            processedHistory = processedHistory.replace(/(https?:\/\/[^\s<]+)(?![^<]*>)/g, '<a href="$1" target="_blank">$1</a>');
            return processedHistory;
        }

        chatbotBtn.addEventListener("click", function () {
            if (chatbotContainer.classList.contains("active")) {
                chatbotContainer.classList.remove("active");
            } else {
                chatbotContainer.classList.add("active");
                fetch("/Chatbot/GetChatHistory", { method: "GET" })
                    .then(response => response.json())
                    .then(data => {
                        chatMessages.innerHTML = processChatHistory(data.history);
                        chatMessages.scrollTop = chatMessages.scrollHeight;
                    })
                    .catch(error => {
                        console.error("Error fetching chat history:", error);
                        chatMessages.innerHTML = "<div><b>Bot:</b> Error loading chat history.</div>";
                    });
            }
        });

        function sendMessage() {
            let input = document.getElementById("chatbot-input").value;
            let language = document.getElementById("language-select").value;
            if (input.trim() === "") return;

            chatMessages.innerHTML += `<div><b>You:</b> ${input}</div>`;
            chatMessages.scrollTop = chatMessages.scrollHeight;

            chatMessages.innerHTML += `<div id="typing-indicator"><b>Bot:</b> ${language === "vi" ? "Đang nhập..." : "Typing..."}</div>`;
            chatMessages.scrollTop = chatMessages.scrollHeight;

            fetch("/Chatbot/GetChatbotResponse", {
                method: "POST",
                headers: { "Content-Type": "application/x-www-form-urlencoded" },
                body: `message=${encodeURIComponent(input)}&language=${language}`
            })
                .then(response => response.json())
                .then(data => {
                    document.getElementById("typing-indicator").remove();
                    let reply = data.reply.replace(/\n/g, "<br>");
                    reply = reply.replace(/\[([^\]]+)\]\(([^)]+)\)/g, '<a href="$2" target="_blank">$1</a>');
                    reply = reply.replace(/(https?:\/\/[^\s<]+)(?![^<]*>)/g, '<a href="$1" target="_blank">$1</a>');
                    if (data.productUrl && !reply.includes(data.productUrl)) {
                        reply += `<br><a href="${data.productUrl}" target="_blank">${language === "vi" ? "Xem chi tiết sản phẩm" : "View product details"}</a>`;
                    }
                    chatMessages.innerHTML += `<div><b>Bot:</b> ${reply}</div>`;
                    chatMessages.scrollTop = chatMessages.scrollHeight;
                })
                .catch(error => {
                    document.getElementById("typing-indicator").remove();
                    chatMessages.innerHTML += `<div><b>Bot:</b> ${language === "vi" ? "Đã xảy ra lỗi, vui lòng thử lại!" : "An error occurred, please try again!"}</div>`;
                    console.error("Error:", error);
                });

            document.getElementById("chatbot-input").value = "";
        }

        document.getElementById("send-chatbot").addEventListener("click", sendMessage);

        document.getElementById("chatbot-input").addEventListener("keypress", function (event) {
            if (event.key === "Enter") {
                event.preventDefault();
                sendMessage();
            }
        });
    </script>

    <script src="~/js/jquery.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/jquery.scrollUp.min.js"></script>
    <script src="~/js/price-range.js"></script>
    <script src="~/js/jquery.prettyPhoto.js"></script>
    <script src="~/js/main.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>